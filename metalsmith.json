{
  "metadata": {
    "site": {
      "title": "Tomaw Tech"    
    }
  },
  "plugins": {
    "metalsmith-collections": {
      "pages": {
        "pattern": "pages/*.md"
      },
      "posts": {
        "pattern": "posts/*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-page-titles":{},
    "metalsmith-layouts": {
      "engine": "handlebars",
      "partials": "./layouts/partials",
      "default": "post.hbt"
    },
    "metalsmith-broken-link-checker": true
  }
}

